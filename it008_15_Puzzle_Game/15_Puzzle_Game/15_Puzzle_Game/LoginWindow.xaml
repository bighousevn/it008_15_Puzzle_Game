<Window x:Class="_15_Puzzle_Game.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_15_Puzzle_Game"
        xmlns:popup="clr-namespace:MaterialDesignThemes.Wpf.Converters.CircularProgressBar;assembly=MaterialDesignThemes.Wpf"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:viewmodel="clr-namespace:_15_Puzzle_Game.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextRenderingMode="Auto"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        DataContext="{StaticResource MainVM}"
        mc:Ignorable="d"
        Title="LoginWindow" 
        Height="675"
        Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Sliding Puzzle"
                       TextAlignment="Center"
                       FontFamily="{StaticResource mainFont}"
                       FontSize="100"></TextBlock>

            <materialDesign:Card Grid.Row="1"
                     Height="400"
                     Width="500">
                <Grid Margin="15 0 15 0">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          Height="100">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="29*"/>
                            <ColumnDefinition Width="18*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="NameTextBox"
                     materialDesign:HintAssist.Hint="UserName"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Height="100"
                     FontFamily="{StaticResource mainFont}"
                     FontSize="50" Grid.ColumnSpan="2">
                        </TextBox>
                    </Grid>

                    <Grid Grid.Row="1"
              Height="100">
                        <PasswordBox x:Name="FloatingPasswordBox"
                         materialDesign:HintAssist.Hint="Password"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                         Height="100"
                         FontFamily="{StaticResource mainFont}"
                         FontSize="50"/>
                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                    Content="Login"
                    Style="{StaticResource MaterialDesignRaisedLightButton}"
                    Height="60"
                    Width="150"
                    FontFamily="{StaticResource mainFont}"
                    FontSize="40"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"></Button>

                        <Button Grid.Column="1"
                    Content="Register"
                    Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}"
                    Height="60"
                    Width="150"
                    FontFamily="{StaticResource mainFont}"
                    FontSize="40"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"></Button>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Grid>
        

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       FontFamily="{StaticResource ResourceKey=mainFont}"
                       FontSize="100"
                       TextAlignment="Center"
                       TextWrapping="Wrap"><Run Text="NICE TO"/><LineBreak/><Run Text="MEET YOU"/></TextBlock>

            <Image Grid.Row="1"
                   Source="Picture/Icon.png"></Image>

            <TextBlock Grid.Row="2"
                       Text="Let's puzzle"
                       FontFamily="{StaticResource mainFont}"
                       FontSize="100"
                       TextAlignment="Center"></TextBlock>
        </Grid>
    </Grid>
</Window>
