                </Border>

                <Border BorderBrush="#0e5898"
                        BorderThickness="5"
                        Margin="0, 15, 95, 10"
                        Width="300"
                        Background="#fdfdfd"
                        Style="{StaticResource BorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
