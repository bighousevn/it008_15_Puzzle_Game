                </Border>
            </WrapPanel>

        </ScrollViewer>
        <Button Grid.Row="0"
                Style="{StaticResource MaterialDesignFloatingActionButton}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" 
                Margin="10,10,0,0"
                Width="80"
                Height="80" 
                Click="Button_Click_1"
                Background="#0e5898">
            <materialDesign:PackIcon Kind="ArrowBack"
                                     Width="40"
                                     Height="40"
                                     Foreground="White"/>
        </Button>

    </Grid>
</Page>
